<AnchorPane prefHeight="844.0" prefWidth="1034.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/21" fx:controller="controllers.BlocController">
    <HBox prefHeight="830.0" prefWidth="1020.0" spacing="20">

        <!-- Left: Table View -->
        <VBox alignment="TOP_CENTER" spacing="10" styleClass="card-style" VBox.vgrow="ALWAYS">
            <Label text="Blocs" textAlignment="CENTER">
                <font>
                    <Font name="System Bold" size="89.0" />
                </font>
            </Label>
            <TableView fx:id="tableviewBloc" prefHeight="700" prefWidth="800" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="nomCol" prefWidth="250.0" text="Nom" />
                    <TableColumn fx:id="descriptionCol" prefWidth="250.0" text="Description" />
                    <TableColumn fx:id="statutCol" prefWidth="70.0" text="Statut" />
                    <TableColumn fx:id="actionCol" prefWidth="150.0" text="Actions" />
                </columns>
            </TableView>
        </VBox>

        <!-- Right: Add Form -->
        <VBox fx:id="formContainer" alignment="TOP_CENTER" prefHeight="1002.0" prefWidth="198.0" spacing="10" styleClass="card-style" VBox.vgrow="ALWAYS">
            <Label styleClass="title-label" text="Add Bloc">
                <font>
                    <Font name="System Bold" size="26.0" />
                </font>
            </Label>

            <TextField fx:id="nomField" promptText="Nom" />
            <TextField fx:id="descriptionField" promptText="Description" />
            <ComboBox fx:id="statutComboBox" promptText="Statut">
                <items>
                    <FXCollections fx:factory="observableArrayList">
                        <String fx:value="Actif"/>
                        <String fx:value="Inactif"/>
                    </FXCollections>
                </items>
            </ComboBox>

            <Button fx:id="updateButton" disable="true" onAction="#handleUpdateAction" style="-fx-background-color: #1e1e1e; -fx-text-fill: white;" styleClass="upload-btn" text="Update" />
            <Button fx:id="addButton" onAction="#handleAdd" styleClass="add-btn" text="Ajouter" />
        </VBox>

    </HBox>
</AnchorPane>