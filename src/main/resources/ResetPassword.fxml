<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox alignment="CENTER" spacing="20" xmlns:fx="http://javafx.com/fxml" fx:controller="controllers.ResetPasswordController">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>
    
    <Label text="Réinitialisation du mot de passe" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>
    
    <GridPane vgap="10" hgap="10">
        <Label text="Email:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
        <TextField fx:id="emailField" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
        
        <Label text="Code de réinitialisation:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
        <TextField fx:id="resetCodeField" GridPane.columnIndex="1" GridPane.rowIndex="1" visible="false"/>
    </GridPane>
    
    <HBox spacing="10" alignment="CENTER">
        <Button text="Envoyer le code" onAction="#handleSendResetLink" style="-fx-background-color: #4CAF50; -fx-text-fill: white;"/>
        <Button text="Réinitialiser" onAction="#handleResetPassword" style="-fx-background-color: #2196F3; -fx-text-fill: white;"/>
        <Button text="Annuler" onAction="#handleCancel" style="-fx-background-color: #f44336; -fx-text-fill: white;"/>
    </HBox>
</VBox> 