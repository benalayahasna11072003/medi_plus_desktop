<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.shape.Circle?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controllers.AvisDetailsController"
            prefWidth="600.0">

    <!-- Header -->
    <top>
        <HBox style="-fx-background-color: #1A76D1;">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <Label text="Avis Details :" style="-fx-font-size: 18px; -fx-text-fill: white; -fx-font-weight: bold;"/>
        </HBox>
    </top>

    <!-- Content Area -->
    <center>
        <VBox spacing="15">
            <padding>
                <Insets top="15" right="15" bottom="15" left="15"/>
            </padding>

            <!-- Details Grid -->
            <GridPane hgap="50" vgap="15">
                <!-- Patient -->
                <Label text="Patient:" style="-fx-font-weight: bold;"
                       GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                <Label fx:id="patientValue" text="test1"
                       GridPane.columnIndex="0" GridPane.rowIndex="1"/>

                <!-- Professional -->
                <Label text="Professional:" style="-fx-font-weight: bold;"
                       GridPane.columnIndex="1" GridPane.rowIndex="0"/>
                <Label fx:id="professionalValue" text="test1"
                       GridPane.columnIndex="1" GridPane.rowIndex="1"/>

                <!-- Rating -->
                <Label text="Rating:" style="-fx-font-weight: bold;"
                       GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                <StackPane GridPane.columnIndex="0" GridPane.rowIndex="3">
                    <Circle fx:id="ratingCircle" radius="12" fill="orange"/>
                    <Label fx:id="ratingValue" text="5" style="-fx-text-fill: white;"/>
                </StackPane>

                <!-- Date -->
                <Label text="Date:" style="-fx-font-weight: bold;"
                       GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                <Label fx:id="dateValue" text="2025-03-04"
                       GridPane.columnIndex="1" GridPane.rowIndex="3"/>
            </GridPane>

            <!-- Comment -->
            <Label text="Comment:" style="-fx-font-weight: bold;"/>
            <Label fx:id="commentValue" text="azera" wrapText="true"/>

            <!-- Responses -->
            <Label text="Responses:" style="-fx-font-weight: bold;"/>
            <ListView fx:id="responsesListView" prefHeight="200.0"
                      style="-fx-background-color: white; -fx-border-color: #E0E0E0;"/>
        </VBox>
    </center>
</BorderPane>