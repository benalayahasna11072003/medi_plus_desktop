<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controllers.UpdateResponseController"
            prefWidth="400" prefHeight="250">
    <top>
        <HBox style="-fx-background-color: #007bff; -fx-padding: 10px;">
            <Label text="Update Your Response :" style="-fx-text-fill: white; -fx-font-size: 16px;"/>
        </HBox>
    </top>
    <center>
        <VBox spacing="15" alignment="CENTER_LEFT">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>
            <Label text="Your Response" />
            <TextArea fx:id="responseTextArea" wrapText="true" prefHeight="100" />
        </VBox>
    </center>
    <bottom>
        <HBox spacing="15" alignment="CENTER" style="-fx-padding: 15px;">
            <Button fx:id="saveButton" text="Save Response" onAction="#handleSave"
                    style="-fx-background-color: #28a745; -fx-text-fill: white;" prefWidth="150">
                <graphic>
                    <Label text="" style="-fx-graphic: url('/icons/save.png');"/>
                </graphic>
            </Button>
            <Button fx:id="backButton" text="Back to Reviews" onAction="#handleBack"
                    style="-fx-background-color: #007bff; -fx-text-fill: white;" prefWidth="150">
                <graphic>
                    <Label text="" style="-fx-graphic: url('/icons/back.png');"/>
                </graphic>
            </Button>
        </HBox>
    </bottom>
</BorderPane>