<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controllers.MainWindowController"
            style="-fx-background-color: #f5f5f5;"
            prefHeight="700.0" prefWidth="1200.0">

    <top>
        <MenuBar BorderPane.alignment="CENTER" style="-fx-background-color: #2c3e50;">
            <menus>
                <Menu text="Fichier" style="-fx-text-fill: white;">
                    <items>
                        <MenuItem text="Déconnexion" onAction="#handleLogout" 
                                 style="-fx-text-fill: #2c3e50;"/>
                    </items>
                </Menu>
                <Menu text="Administration" style="-fx-text-fill: white;">
                    <items>
                        <MenuItem text="Gestion des utilisateurs" onAction="#handleUserManagement" 
                                 style="-fx-text-fill: #2c3e50;"/>
                    </items>
                </Menu>
                <Menu text="Aide" style="-fx-text-fill: white;">
                    <items>
                        <MenuItem text="À propos" style="-fx-text-fill: #2c3e50;"/>
                    </items>
                </Menu>
            </menus>
        </MenuBar>
    </top>

    <center>
        <VBox alignment="CENTER" spacing="30" style="-fx-padding: 20;">
            <ImageView fitHeight="200.0" fitWidth="200.0" preserveRatio="true">
                <image>
                    <Image url="@images/logo.png"/>
                </image>
            </ImageView>
            
            <Text text="Bienvenue dans l'application médicale" 
                  style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-fill: #2c3e50;"/>
            
            <Label fx:id="userInfoLabel" 
                   style="-fx-font-size: 18px; -fx-text-fill: #7f8c8d;"/>
            
            <HBox alignment="CENTER" spacing="20" style="-fx-padding: 20;">
                <Button text="Gestion des patients" 
                        style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-pref-width: 200; -fx-pref-height: 50; -fx-background-radius: 5; -fx-font-weight: bold;"/>
                <Button text="Gestion des rendez-vous" 
                        style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-pref-width: 200; -fx-pref-height: 50; -fx-background-radius: 5; -fx-font-weight: bold;"/>
                <Button text="Gestion des médicaments" 
                        style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-pref-width: 200; -fx-pref-height: 50; -fx-background-radius: 5; -fx-font-weight: bold;"/>
            </HBox>
        </VBox>
    </center>

    <bottom>
        <HBox alignment="CENTER" style="-fx-padding: 10; -fx-background-color: #2c3e50;">
            <Label text="© 2024 Application Médicale - Tous droits réservés" 
                   style="-fx-text-fill: white;"/>
        </HBox>
    </bottom>
</BorderPane> 