<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controllers.loginControlleur"
            style="-fx-background-color: #f5f5f5;"
            prefHeight="600.0" prefWidth="1000.0">

    <VBox alignment="CENTER" spacing="20.0"
          AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
          AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">

        <padding>
            <Insets top="20" right="20" bottom="20" left="20"/>
        </padding>

        <Text text="Connexion" style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-fill: #2c3e50;"/>

        <VBox alignment="CENTER" spacing="15.0" style="-fx-background-color: white; -fx-padding: 30; -fx-background-radius: 10;">
            <TextField fx:id="emailField" promptText="Email"
                      style="-fx-pref-width: 300; -fx-pref-height: 40; -fx-background-radius: 5;"/>

            <PasswordField fx:id="passwordField" promptText="Mot de passe"
                         style="-fx-pref-width: 300; -fx-pref-height: 40; -fx-background-radius: 5;"/>

            <Hyperlink fx:id="forgotPasswordLink" text="Mot de passe oubliÃ©?" onAction="#handleForgotPassword"
                      style="-fx-text-fill: #3498db;"/>

            <Button text="Se connecter" onAction="#handleLogin"
                   style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-pref-width: 300; -fx-pref-height: 40; -fx-background-radius: 5;"/>

            <Text text="ou" style="-fx-fill: #7f8c8d;"/>

            <HBox alignment="CENTER" spacing="20">
                <Button fx:id="googleLoginButton" text="Google" onAction="#handleGoogleLogin"
                       style="-fx-background-color: white; -fx-text-fill: #2c3e50; -fx-border-color: #bdc3c7; -fx-border-radius: 5; -fx-pref-width: 140; -fx-pref-height: 40;">
                    <HBox alignment="CENTER" spacing="10">
                        <ImageView>
                            <Image url="@../images/google-icon.png"/>
                        </ImageView>
                        <Label text="Continuer avec Google" style="-fx-text-fill: #666;"/>
                    </HBox>
                </Button>
            </HBox>
        </VBox>

        <HBox alignment="CENTER" spacing="5">
            <Text text="Pas encore de compte?" style="-fx-fill: #7f8c8d;"/>
            <Hyperlink text="S'inscrire" onAction="#handleSignUp"
                      style="-fx-text-fill: #3498db; -fx-font-weight: bold;"/>
        </HBox>
    </VBox>
</AnchorPane>
