<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.shape.Circle?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controllers.ConsultationDetailsController"
            prefWidth="600.0">

    <!-- Header -->
    <top>
        <HBox style="-fx-background-color: #1A76D1;">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <Label text="Consultations Details :" style="-fx-font-size: 18px; -fx-text-fill: white; -fx-font-weight: bold;"/>
        </HBox>
    </top>

    <!-- Content Area -->
    <center>
        <VBox spacing="15">
            <padding>
                <Insets top="15" right="15" bottom="15" left="15"/>
            </padding>

            <!-- Details Grid -->
            <GridPane hgap="50" vgap="15">
                <!-- Patient -->
                <Label text="Patient:" style="-fx-font-weight: bold;"
                       GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                <Label fx:id="patientValue" text="test1"
                       GridPane.columnIndex="1" GridPane.rowIndex="0"/>

                <!-- Professional -->
                <Label text="Professional:" style="-fx-font-weight: bold;"
                       GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                <Label fx:id="professionalValue" text="test1"
                       GridPane.columnIndex="1" GridPane.rowIndex="1"/>

                <!-- Rating -->
                <Label text="raisonValue:" style="-fx-font-weight: bold;"
                       GridPane.columnIndex="2" GridPane.rowIndex="0"/>
                    <Label fx:id="raisonValue" text="5"  GridPane.columnIndex="3"  GridPane.rowIndex="0"/>

                <!-- Date -->
                <Label text="Date:" style="-fx-font-weight: bold;"
                       GridPane.columnIndex="2" GridPane.rowIndex="1"/>
                <Label fx:id="dateValue" text="2025-03-04"
                       GridPane.columnIndex="3" GridPane.rowIndex="1"/>
            </GridPane>





        </VBox>
    </center>
</BorderPane>